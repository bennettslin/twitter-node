<% include ../partials/header.ejs %>

<% if (screen_name) { %>
  <h1>Hello, <%= screen_name %>.</h1>
<% } else { %>
  <h1>Hello.</h1>
<% } %>

<form class="form" action="/user" method="post">
  <input type="text" name="user" placeholder="screen_name or user_id">
  <button type="submit">Submit</button>
</form>

<form class="form" action="/tweet" method="post">
  <input type="text" name="tweet_id" placeholder="tweet_id">
  <button type="submit">Submit</button>
</form>

<form class="form" action="/trends-place" method="post">
  <input type="text" name="address" placeholder="location" value="500 Yale Ave N, Seattle WA">
  <button type="submit">Submit</button>
</form>

<form class="form" action="/search" method="post">
  <input type="text" name="q" placeholder="search">
  <button type="submit">Submit</button>
</form>

<form class="form" action="/email" method="post">
  <legend>Email using nodemailer</legend>
  <input name="email_to" type="text" placeholder="email to" value="bennett@crownsocial.com" />
  <input name="subject" type="text" placeholder="subject" value="Hi there" />
  <textarea name="content" placeholder="content">This is just a test.</textarea>
  <button type="submit">Submit</button>
</form>

<% include ../partials/footer.ejs %>